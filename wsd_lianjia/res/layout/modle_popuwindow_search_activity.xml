<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_base_yellow_light_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/modle_popuwindow_ershoufang"
        style="@style/text_base_font_size_12sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height_small"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="二手房" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/contains"
        android:background="@color/white" />

    <TextView
        android:id="@+id/modle_popuwindow_xinfang"
        style="@style/text_base_font_size_12sp"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="@dimen/title_bar_height_small"
        android:text="新房" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/contains"
        android:background="@color/white" />

    <TextView
        android:id="@+id/modle_popuwindow_zufang"
        style="@style/text_base_font_size_12sp"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="@dimen/title_bar_height_small"
        android:text="租房" />

</LinearLayout>