<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/mainActivity_fragment_contains"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" >
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow_light" />

    <RadioGroup
        android:id="@+id/mainActivity_bottom_menu_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <RadioButton
            android:id="@+id/mainActivity_radiobutton_first_pager"
            style="@style/text_base_font_size_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="-3dp"
            android:drawableTop="@drawable/main_activity_radiobutton_image_first_pager_selector"
            android:text="首页"
            android:textColor="@color/selector_base_text_color" />

        <RadioButton
            android:id="@+id/mainActivity_radiobutton_message"
            style="@style/text_base_font_size_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-3dp"
            android:drawableTop="@drawable/main_activity_radiobutton_image_message_selector"
            android:text="消息"
            android:textColor="@color/selector_base_text_color" />

        <RadioButton
            android:id="@+id/mainActivity_radiobutton_yuyue"
            style="@style/text_base_font_size_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-3dp"
            android:drawableTop="@drawable/main_activity_radiobutton_image_subscribe_selector"
            android:text="预约"
            android:textColor="@color/selector_base_text_color" />

        <RadioButton
            android:id="@+id/mainActivity_radiobutton_mine"
            style="@style/text_base_font_size_12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-3dp"
            android:drawableTop="@drawable/main_activity_radiobutton_image_mine_selector"
            android:text="我的"
            android:textColor="@color/selector_base_text_color" />
    </RadioGroup>

</LinearLayout>